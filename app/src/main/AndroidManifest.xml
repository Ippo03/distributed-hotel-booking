<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Distributed_hotel_booking"
        tools:targetApi="31">
        <activity
            android:name=".BookingScreen"
            android:exported="false"
            android:label="@string/title_activity_booking_screen"
            android:theme="@style/Theme.Distributed_hotel_booking" />
        <activity
            android:name=".RoomDetailsScreen"
            android:exported="false"
            android:label="@string/title_activity_room_details_screen"
            android:theme="@style/Theme.Distributed_hotel_booking" />
        <activity
            android:name=".ManagerHomeScreen"
            android:exported="false"
            android:label="@string/title_activity_manager_home_screen"
            android:theme="@style/Theme.Distributed_hotel_booking" />
        <activity
            android:name=".UserHomeScreen"
            android:exported="false"
            android:label="@string/title_activity_user_home_screen"
            android:theme="@style/Theme.Distributed_hotel_booking" />
        <activity
            android:name=".ChatbotActivity.kt"
            android:exported="false"
            android:label="@string/title_activity_chatbot_activity.kt"
            android:theme="@style/Theme.Distributed_hotel_booking" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Distributed_hotel_booking">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>